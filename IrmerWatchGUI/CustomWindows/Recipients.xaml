<Window x:Class="IrmerWatchGUI.CustomWindows.Recipients"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IrmerWatchGUI.CustomWindows"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title=" Email Recipients" 
        MaxHeight="600"
        WindowStartupLocation="CenterScreen">
    <Grid x:Name="RecipientGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150px"/>
            <ColumnDefinition Width="200px"/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="35px"/>
        </Grid.RowDefinitions>

        <!--Column Titles-->
        <Label x:Name="titleName" Grid.Column="0" Background="Gray" Content="Name" Margin="0,0,0,5"/>
        <Label x:Name="titleEmail" Grid.Column="1" Background="Gray" Content="Email" Margin="0,0,0,5"/>
        <Label x:Name="titleRemoveButton" Grid.Column="2" Background="Gray" Content="Remove?" Margin="0,0,0,5"/>


    </Grid>
</Window>
